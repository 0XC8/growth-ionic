define SkillCal {
    text : '',
    constructor : function(message){
        this.text = message;
    }
}

//find any message that starts with hello
rule Server {
    when {
        m : SkillCal m.text =~ /^server$/;
    }
    then {
        modify(m, function(){this.text += "后台经验丰富";});
    }
}

//find all messages then end in goodbye
rule Front {
    when {
        m : SkillCal m.text =~ /^front$/;
    }
    then {
        modify(m, function(){this.text += "前端大师";});
    }
}
