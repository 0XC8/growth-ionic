define SkillCal {
  text: '',
  serverSkill: 0,
  frontSkill: 0,
  devOpsSkill: 0,
  constructor : function(text, serverSkill, frontSkill, devOpsSkill){
    this.text = text;
    this.serverSkill = serverSkill;
    this.frontSkill = frontSkill;
    this.devOpsSkill = devOpsSkill;
  }
}

rule FrontServer5 {
    when {
        skill : SkillCal skill.frontSkill === 5;
        skill : SkillCal skill.serverSkill === 5;
        skill : SkillCal skill.devOpsSkill === 3;
    }
    then {
        if(skill.devOpsSkill >= 3){
          skill.text = "后台与前端都经验丰富的开发者，然而看起来，还需要一点DevOps方面的经验。";
        } else {
          skill.text = "后台与前端都经验丰富的开发者，DevOps也不错。";
        }

        modify(skill);
        retract(skill);
    }
}

rule Front5Server4 {
    when {
        skill : SkillCal skill.frontSkill === 5;
        skill : SkillCal skill.serverSkill === 4;
    }
    then {
        skill.text = "前端都经验丰富,后台经典不错的开发者";
        modify(skill);
        retract(skill);
    }
}
