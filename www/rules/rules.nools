define SkillCal {
  text: '',
  serverSkill: 0,
  frontSkill: 0,
  devOpsSkill: 0,
  constructor : function(text, serverSkill, frontSkill, devOpsSkill){
    this.text = text;
    this.serverSkill = serverSkill;
    this.frontSkill = frontSkill;
    this.devOpsSkill = devOpsSkill;
  }
}

rule FrontServer5 {
    when {
        skill : SkillCal skill.frontSkill  >= 4;
        skill : SkillCal skill.serverSkill >= 4;
        skill : SkillCal skill.devOpsSkill <= 3;
    }
    then {
        skill.text = "后台与前端都经验丰富的开发者，然而看起来，还需要一点DevOps方面的经验。";
        modify(skill);
        retract(skill);
    }
}

rule FrontServerDevOps {
    when {
        skill : SkillCal skill.frontSkill  >= 4;
        skill : SkillCal skill.serverSkill >= 4;
        skill : SkillCal skill.devOpsSkill >= 3;
    }
    then {
        skill.text = "后台与前端都经验丰富的开发者，DevOps方面的经验也挺丰富的。";
        modify(skill);
        retract(skill);
    }
}

rule FrontServer4 {
    when {
        skill : SkillCal skill.frontSkill  < 4;
        skill : SkillCal skill.serverSkill < 4;
    }
    then {
        skill.text = "后台与前端都有些经验，不过还是需要一些提高。";
        modify(skill);
        retract(skill);
    }
}